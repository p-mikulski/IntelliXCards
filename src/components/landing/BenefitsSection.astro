      <p class="text-lg text-muted-foreground max-w-3xl mx-auto">
        Experience the benefits of AI-powered learning and transform the way you study.
      </p>
    </div>

    <!-- Benefits Grid -->
    <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-4 max-w-6xl mx-auto animate-fade-in" style="animation-delay: 0.2s;">
      {benefits.map((benefit) => (
        <BenefitCard
          title={benefit.title}
          description={benefit.description}
          icon={benefit.icon}
        />
      ))}
    </div>
  </div>
</section>

<style>
  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fade-in 0.6s ease-out forwards;
    opacity: 0;
  }
</style>
