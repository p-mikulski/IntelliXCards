---
const currentYear = new Date().getFullYear();

const footerLinks = {
  product: [
    { name: "Features", href: "/#features" },
    { name: "Benefits", href: "/#benefits" },
    { name: "Pricing", href: "/#pricing" },
  ],
  legal: [
    { name: "Privacy Policy", href: "/privacy" },
    { name: "Terms of Service", href: "/terms" },
  ],
  social: [
    { name: "GitHub", href: "https://github.com", icon: "ğŸ”—" },
    { name: "Twitter", href: "https://twitter.com", icon: "ğŸ¦" },
  ],
};
---

<footer class="bg-secondary/20 border-t border-border" role="contentinfo">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-4">
      <!-- Brand -->
      <div class="space-y-4">
        <h3 class="text-lg font-bold text-foreground">IntelliXCards</h3>
        <p class="text-sm text-muted-foreground">
          AI-powered flashcard generation to accelerate your learning journey.
        </p>
      </div>

      <!-- Product Links -->
      <div class="space-y-4">
        <h4 class="text-sm font-semibold text-foreground">Product</h4>
        <ul class="space-y-2">
          {footerLinks.product.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-sm text-muted-foreground hover:text-foreground transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:rounded-sm"
              >
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Legal Links -->
      <div class="space-y-4">
        <h4 class="text-sm font-semibold text-foreground">Legal</h4>
        <ul class="space-y-2">
          {footerLinks.legal.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-sm text-muted-foreground hover:text-foreground transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:rounded-sm"
              >
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Social Links -->
      <div class="space-y-4">
        <h4 class="text-sm font-semibold text-foreground">Connect</h4>
        <ul class="space-y-2">
          {footerLinks.social.map((link) => (
            <li>
              <a
                href={link.href}
                target="_blank"
                rel="noopener noreferrer"
                class="text-sm text-muted-foreground hover:text-foreground transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:rounded-sm inline-flex items-center gap-2"
              >
                <span aria-hidden="true">{link.icon}</span>
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Copyright -->
    <div class="mt-12 pt-8 border-t border-border">
      <p class="text-center text-sm text-muted-foreground">
        Â© {currentYear} IntelliXCards. All rights reserved.
      </p>
    </div>
  </div>
</footer>
