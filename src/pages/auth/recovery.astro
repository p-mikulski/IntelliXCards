---
import Layout from "@/layouts/Layout.astro";
import RecoveryView from "@/components/auth/RecoveryView";

export const prerender = false;

const pageTitle = "Reset Password | IntelliXCards";
const pageDescription = "Recover access to your IntelliXCards account in a few simple steps.";

// Redirect authenticated users to dashboard
const user = Astro.locals.user;
if (user) {
  return Astro.redirect("/dashboard");
}
---

<Layout title={pageTitle} description={pageDescription}>
  <RecoveryView client:load />
</Layout>
